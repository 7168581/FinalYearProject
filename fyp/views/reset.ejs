<%- include header %>

<form class="form-horizontal" method="post">
<fieldset>
	<legend><h1><%= title %></h1></legend>
	<div class="col-md-8">
		<form role="form">
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="username">Username</label>
					</div>
					<div class="col-md-8">
						<input type="text" class="form-control" id="username" name="username" autofocus="autofocus" required="required" maxlength="25" placeholder="Username">
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="newPassword">New Password</label>
					</div>
					<div class="col-md-8">
						<div class="input-group">
							<input type="password" class="form-control" id="newPassword" name="newPassword" required="required" maxlength="25" placeholder="Password">
							<span class="input-group-btn">
								<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="right" title="The length of password must be at least 5 but no more than 25.">!</button>
							</span>
						</div>			
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label for="reEnterNewPassword">Re-enter New Password</label>
					</div>
					<div class="col-md-8">
						<div class="input-group">	
							<input type="password" class="form-control" id="reEnterNewPassword" name="reEnterNewPassword" required="required" maxlength="25" placeholder="Re-enter Password">
							<span class="input-group-btn">
								<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="right" title="The length of password must be at least 5 but no more than 25.">!</button>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<button type="submit" class="btn btn-primary col-md-2 col-md-offset-4">Reset Password</button>
			</div>
		</form> 
	</div>
</fieldset>
</form>

<%- include footer %>