				<div class="panel-group" id="accordion">
				<% items.forEach(function (item, index) { %>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">
								<a href="#panel_<%= item.itemId %>" data-toggle="collapse" data-parent="#according">
									<%= item.itemName %>
								</a>
								<% if (user.userType == "admin") { %>
									<div class="pull-right">
										<a class="edit" href="/edit-item/<%= item.itemId %>">Edit</a>
										<a class="delete" href="#delete-modal" data-toggle="modal" data-id="<%= item.itemId %>" id="delete_item">Delete</a>
									</div>
								<% } %>
