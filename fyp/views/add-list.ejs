<%- include header %>

<form class="form-horizontal" method="post">
<fieldset>
	<legend><h1><%= title %></h1></legend>
	<div class="col-md-8">
		<form role="form">
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="itemName">List name</label>
					</div>
					<div class="col-md-8">
						<input type="text" class="form-control" id="listName" name="listName" autofocus="autofocus" required="required" maxlength="25" placeholder="List name">
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="info">List Information</label>
					</div>
					<div class="col-md-8">
						<textarea class="form-control" id="info" name="info" row="8" placeholder="Some info here"></textarea>
					</div>
				</div>
			</div>
			<div class="row">
				<button type="submit" class="btn btn-primary col-md-2 col-md-offset-4">Add list</button>
			</div>
		</form>
	</div>
</fieldset>
</form>


<%- include footer %>