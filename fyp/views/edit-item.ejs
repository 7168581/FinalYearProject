<%- include header %>

<form class="form-horizontal" method="post">
<fieldset>
	<legend><h1><%= title %></h1></legend>
	<div class="col-md-8">
		<form role="form">
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="itemName">Item name</label>
					</div>
					<div class="col-md-8">
						<input type="text" class="form-control" id="itemName" name="itemName" autofocus="autofocus" required="required" maxlength="25" value="<%= item.itemName %>" disabled="disabled">
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="keyword">Keyword(s)</label>
					</div>
					<div class="col-md-2">
						<input type="text" class="form-control" id="keyword_1" name="keyword_1" required="required" value="<%= item.keyword[0] %>">
					</div>
					<div class="col-md-2">
						<input type="text" class="form-control" id="keyword_2" name="keyword_2" value="<%= item.keyword[1] %>">
					</div>
					<div class="col-md-2">
						<input type="text" class="form-control" id="keyword_3" name="keyword_3" value="<%= item.keyword[2] %>">
					</div>
					<div class="col-md-2">
						<input type="text" class="form-control" id="keyword_4" name="keyword_4" value="<%= item.keyword[3] %>">
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label for="category" class="control-label">Category</label>
					</div>
					<div class="col-md-8">
						<select class="form-control" id="edit_item_category"  name="category" data-style="btn-success">
							<optgroup label="Option 1">
								<option>option 1.1</option>
								<option>option 1.2</option>
								<option>option 1.3</option>
							</optgroup>
							<optgroup label="Option 2">
								<option>option 2.1</option>
								<option>option 2.2</option>
								<option>option 2.3</option>
							</optgroup>
						</select>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-3 col-md-offset-1">
						<label class="control-label" for="description">Description</label>
					</div>
					<div class="col-md-8">
						<textarea class="form-control" id="description" name="description" row="5"><%= item.description %></textarea>
					</div>
				</div>
			</div>
			<div class="row">
				<button type="submit" class="btn btn-primary col-md-2 col-md-offset-4">Edit item</button>
			</div>
		</form>
	</div>
</fieldset>
</form>

<script>
var value = "<%= item.category %>";
$("#edit_item_category").val(value);
$("#edit_item_category").change();
</script>

<%- include footer %>